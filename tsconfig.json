{
	"compilerOptions": {
		"target": "ESNext",
		"module": "NodeNext",
		"outDir": "./dist",
		"rootDir": "./src",
		"allowJs": true,
		"strict": true,
		"noImplicitAny": false,
		"experimentalDecorators": true,
		"emitDecoratorMetadata": true,
		"strictPropertyInitialization": false
	},
	"include": ["src/**/*"],
	"exclude": ["dist/**/*"]
}
